
@model Rkna_Project.Models.AspNetUserRole

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Update @Html.DisplayFor(model => model.AspNetUser.UserName) Permision</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AspNetUser.UserName)

        <div class="form-group">
            @Html.Label("Permision", htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                <select class="form-control" id="RoleId" name="RoleId" required="required">
                    @if (Model.RoleId == "admin")
                    {
                        <option selected value="admin">admin</option>
                    }
                    else
                    {
                        <option value="admin">admin</option>
                    }
                    @if (Model.RoleId == "manager")
                    {
                        <option selected value="manager">manager</option>
                    }
                    else
                    {
                        <option value="manager">manager</option>
                    }

                    @if (Model.RoleId == "user")
                    {
                        <option selected value="user">user</option>
                    }
                    else
                    {
                        <option value="user">user</option>
                    }
                </select>

                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AspNetUser.UserName, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AspNetUser.UserName, "User Name", new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.AspNetUser.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 "style="display:none;">
                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-outline-info btn-rounded" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-rounded btn-large" })
            </div>
        </div>
    </div>
   
        
   
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
