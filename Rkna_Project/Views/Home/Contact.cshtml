@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:55px;">
    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/img/istockphoto-938276488-612x612.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
                <div class="col-md-9 ftco-animate pb-5">

                    <h1 class="mb-3 bread">Contact Us ....</h1>
                </div>
            </div>
        </div>
    </section>
</div>
   
    <section class="ftco-section contact-section">
        <div class="container">
            <div class="row d-flex mb-5 contact-info justify-content-center">
                <div class="col-md-8">
                    <div class="row mb-5">
                        <div class="col-md-4 text-center py-4">
                            <div class="icon">
                                <span class="icon-map-o"></span>
                            </div>
                            <p><span>Address:</span> 20 Taha Heisen St.Minya-Minya-Egypt</p>
                        </div>
                        <div class="col-md-4 text-center border-height py-4">
                            <div class="icon">
                                <span class="icon-mobile-phone"></span>
                            </div>
                            <p><span>Phone:</span> <a href="#">+02 0862223366</a></p>
                        </div>
                        <div class="col-md-4 text-center py-4">
                            <div class="icon">
                                <span class="icon-envelope-o"></span>
                            </div>
                            <p><span>Email:</span> <a href="#">RaknaTeam@gmail.com</a></p>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <div class="row block-9 justify-content-center mb-5">
                <div class="col-md-8 mb-md-5">
                    <h1 class="text-center" style="color:darkorange;">If you got any questions <br>please do not hesitate to send us a message</h1>
                    <form action="#" class="bg-light p-5 contact-form ">
                        <div class="form-group" style="width:100%">
                            <input type="text" class="form-control" placeholder="Your Name">
                        </div>
                        <div class="form-group"style="width:100%">
                            <input type="text" class="form-control" placeholder="Your Email">
                        </div>
                        <div class="form-group"style="width:100%">
                            <input type="text" class="form-control" placeholder="Subject">
                        </div>
                        <div class="form-group"style="width:100%">
                            <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                        </div>
                    </form>

                </div>
            </div>
          
    </section>



    